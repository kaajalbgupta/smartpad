<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    android:scrollbars="none"
    android:descendantFocusability="blocksDescendants"
    android:layout_gravity="fill_vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/constraint_layout"
        android:paddingBottom="20dp"
        android:focusableInTouchMode="true">

        <com.imanoweb.calendarview.CustomCalendarView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:background="#ffffff"
            android:id="@+id/calendar_view_tracker"
            app:selectedDayBackgroundColor="@color/colorPrimaryDark"
            app:selectedDayTextColor="@color/colorIconsText"
            app:currentDayOfMonthColor="@color/colorPrimary"
            app:calendarBackgroundColor="@color/colorIconsText"
            app:calendarTitleTextColor="@color/colorPrimary" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/calendar_view_tracker"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/hind_light"
            android:textSize="25sp"
            android:text="Jan 23 2021"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/hind_light"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:text="Day 1 of Period"
            android:id="@+id/period"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/period"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/hind_light"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:text="Average Color: Bright Red"
            android:id="@+id/color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/color"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/hind_light"
            android:textSize="13sp"
            android:text="Average Heaviness: Heavy"
            android:id="@+id/heaviness"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>