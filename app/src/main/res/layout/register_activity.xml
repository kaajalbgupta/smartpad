<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:id="@+id/image"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_white"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_center"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind_light"
        app:layout_constraintBottom_toTopOf="@id/guide_center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="40sp"
        android:text="Register"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/guide_center"
        android:textColor="@color/white"
        android:inputType="textCapWords"
        android:layout_marginTop="10dp"
        android:id="@+id/name_sign_up_edit_text"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:shadowColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/profile_icon_white"
        android:drawablePadding="10dp"
        android:hint="Name" />
    <androidx.appcompat.widget.AppCompatEditText
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_sign_up_edit_text"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:id="@+id/email_sign_up_edit_text"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:shadowColor="@color/white"
        android:textSize="18sp"
        android:drawableStart="@drawable/email_icon_white"
        android:drawablePadding="10dp"
        android:backgroundTint="@color/white"
        android:hint="Email Address" />
    <androidx.appcompat.widget.AppCompatEditText
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/email_sign_up_edit_text"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:id="@+id/password_sign_up_edit_text"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:shadowColor="@color/white"
        android:textSize="18sp"
        android:drawableStart="@drawable/lock_white"
        android:drawablePadding="10dp"
        android:backgroundTint="@color/white"
        android:hint="Password" />
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/white_button_curved"
        android:textColor="@color/colorPrimaryDark"
        android:text="CONTINUE"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        android:elevation="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/hind_light"
        app:layout_constraintTop_toBottomOf="@id/password_sign_up_edit_text"
        android:layout_marginTop="30dp"
        android:id="@+id/continue_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>