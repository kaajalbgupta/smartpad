<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    android:scrollbars="none"
    android:descendantFocusability="blocksDescendants"
    android:layout_gravity="fill_vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/constraint_layout"
        android:paddingBottom="20dp"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.33"
            android:orientation="vertical"
            android:id="@+id/guide_vertical_center"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.66"
            android:orientation="vertical"
            android:id="@+id/guide_vertical_center_right"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="8dp"
            android:id="@+id/number_of_pads_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.6"
                    android:id="@+id/guide_centerr"/>
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.33"
                    android:id="@+id/guide_leftt"/>
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.66"
                    android:id="@+id/guide_rightt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guide_centerr"
                    android:fontFamily="@font/hind_light"
                    android:text="Number of Pads Used"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/colorDivider"
                    app:layout_constraintLeft_toLeftOf="@id/guide_leftt"
                    app:layout_constraintRight_toRightOf="@id/guide_rightt"
                    app:layout_constraintTop_toTopOf="@id/guide_centerr" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryLight"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guide_leftt"
                    app:layout_constraintTop_toTopOf="@id/guide_centerr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/less_pad_button"
                    android:text="-"
                    android:fontFamily="@font/hind_light"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="@id/guide_rightt"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/guide_centerr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/more_pad_button"
                    android:text="+"
                    android:fontFamily="@font/hind_light"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_pads_text"
                    app:layout_constraintRight_toRightOf="@id/guide_rightt"
                    app:layout_constraintLeft_toLeftOf="@id/guide_leftt"
                    app:layout_constraintTop_toTopOf="@id/guide_centerr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="2"
                    android:fontFamily="@font/hind_light"
                    android:textSize="20sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_of_pads_card"
            card_view:cardCornerRadius="8dp"
            android:id="@+id/filled_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/filled_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:background="@drawable/forty"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="50dp"
                    tools:text="DAY 1"
                    android:textSize="17sp"
                    android:id="@+id/day_number_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/day_number_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="40dp"
                    tools:text="PAD NUMBER 2"
                    android:textSize="17sp"
                    android:id="@+id/pad_number_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/pad_number_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="40dp"
                    android:text="40% Filled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="30dp"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:id="@+id/percent_filled_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/filled_card"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guide_vertical_center"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="150dp"
            android:id="@+id/color_card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.6"
                    android:id="@+id/guide"
                    android:orientation="horizontal"/>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guide"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/dark_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/guide"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="COLOR"
                    android:id="@+id/color_view"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/color_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="DARK RED"
                    android:id="@+id/color_text"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/color_overlay"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/filled_card"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/guide_vertical_center"
            app:layout_constraintRight_toLeftOf="@id/guide_vertical_center_right"
            android:layout_marginStart="10dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/heaviness_card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/heaviness_overlay"/>
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.6"
                    android:id="@+id/guide_1"
                    android:orientation="horizontal"/>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guide_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/heaviness"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/guide_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="HEAVINESS"
                    android:id="@+id/heaviness_text"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/heaviness_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="LIGHT"
                    android:id="@+id/heaviness"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/filled_card"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/guide_vertical_center_right"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/consistency">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/consistency_overlay"/>
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.6"
                    android:id="@+id/guide_2"
                    android:orientation="horizontal"/>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guide_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/consistency"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/guide_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="CONSISTENCY"
                    android:id="@+id/consistency_text"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toBottomOf="@id/consistency_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="THICK"
                    android:id="@+id/consistencyy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/consistency"
            card_view:cardCornerRadius="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/recommendations_card"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recommendations_overlay"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background"
                    android:id="@+id/image"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:text="View Our Analysis >"
                    android:textSize="17sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="270dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommendations_card"
            card_view:cardCornerRadius="8dp"
            android:layout_marginStart="20dp"
            android:id="@+id/colors_card"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/header_colors"
                    android:text="Colors of Past Periods"
                    android:textSize="19sp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/colors_chart"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_colors"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/colors_chart"
                    android:text="Periods"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="@id/colors_chart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/colors_chart"
                    android:text="Days"
                    app:layout_constraintLeft_toLeftOf="@id/colors_chart"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="230dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/colors_card"
            card_view:cardCornerRadius="8dp"
            android:id="@+id/heaviness_progress_card"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/header_heaviness"
                    android:text="Heaviness of Past Periods"
                    android:textSize="19sp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/heaviness_chart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_heaviness"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
